.login-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0f172a 0%, #0b1220 100%);
  color: #e6eef8;
  padding: 24px;
}

.login-card {
  width: 100%;
  max-width: 420px;
  background: linear-gradient(180deg, rgba(255,255,255,0.04), rgba(255,255,255,0.02));
  border: 1px solid rgba(255,255,255,0.06);
  border-radius: 12px;
  padding: 28px;
  box-shadow: 0 6px 24px rgba(2,6,23,0.6);
}

.brand {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 18px;
}

.brand img { width: 36px; height: 36px }
.brand h2 { margin: 0; font-size: 1.25rem; letter-spacing: 0.4px }

.login-form { display: flex; flex-direction: column; gap: 12px }
.field span { display: block; font-size: 0.85rem; color: #cfe6ff; margin-bottom: 6px }
.field input {
  width: 100%;
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid rgba(255,255,255,0.08);
  background: rgba(255,255,255,0.02);
  color: #e6eef8;
}
.field input::placeholder { color: rgba(230,238,248,0.5) }

.btn { padding: 10px 12px; border-radius: 8px; border: none; cursor: pointer }
.btn.primary { background: linear-gradient(90deg,#2563eb,#7c3aed); color: white; font-weight: 600 }

.help { margin-top: 6px; font-size: 0.9rem }
.help a { color: #93c5fd; text-decoration: none }

.login-footer { margin-top: 14px; font-size: 0.8rem; color: rgba(230,238,248,0.6); text-align: center }

@media (max-width: 480px) {
  .login-card { padding: 20px }
}
